extends layout

block leftmenustuff
  li
    a(href="requests")=t('view-requests')
  li
    a(href="request")=t('new-request')


block content
  div(class="grid-x")
    div(class="cell large-auto")
      img(src="https://www.dododex.com/media/creature/otter.png", alt="An otter wearing a top hat")
      p This is a threat
  if (user)
    h2 #{t('greeting')} #{user.username}
    if (user.isBreeder)
      h3=t('your-lines')
      each breed in breeds
        a(href="/requests?breed=" + breed._id)=breed.name