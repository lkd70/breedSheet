extends ../layout

block content
  h1= title
  p #{t('greeting')} - Add/Update Breed
  
  form(action="breeds", method="post")
    p=t('breed-name')
      input(type="text", name="name")
    p=t('server')
      input(type="text", name="server")

    p=t('breeder')
      select(name="breeder")
        each breeder in breeders
            if (breeder.username === "NONE")
                option(selected="selected") NONE 
            else
                option #{breeder.name}

    input(type="submit" name="Submit")


    if breeds
      h2=t('existing-breeds')
      table
        tr
            th=t('getname')
            th=t('getserver')
            th=t('getbreeder')
        each breed in breeds
          tr  
            td= breed.name
            td= breed.server
            each breeder in breeders
                if (breeder._id === breed.breeder)
                    td=breeder.name