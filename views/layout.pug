doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width")
    link(rel='stylesheet', href='/styles/css/minstyle.io.css')
  body
    header
      div(class="ms-menu")
        div(class="ms-menu-logo")
          a(href="/" style="text-decoration: none; color: #fff;")
            p=title
        div(class="ms-menu-link")
          input(id="ms-menu-toggle" type="checkbox")
          input(class="ms-menu-icon" for="ms-menu-toggle")
          ul
            block menuitems
            if (user)
              if (user.isAdmin)
                a(href="/admin")=t('admin-panel')
              a(href="/logout")
                li=t('logout')
            else
              a(href="/login")
                li=t('login')



  div(class="container")
    block content
    script(src="/js/dark.min.js")